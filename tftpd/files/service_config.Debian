# default/tftpd
#
# SaltStack-generated default configuration for tftpd-hpa
#
# /etc/default/tftpd-hpa
{% from "tftpd/map.jinja" import tftpd_settings with context %}

TFTP_USERNAME="{{ tftpd_settings.user }}"
